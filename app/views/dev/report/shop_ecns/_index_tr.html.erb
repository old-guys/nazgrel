<%
  _shopkeeper = record.shopkeeper
%>
<tr>
  <th scope="row"><%= record.id %></th>
  <td><%= record.shop %></td>
  <td><%= _shopkeeper.to_s %></td>
  <td><%= record.channel %></td>
  <td><%= _shopkeeper.try :province %></td>
  <td><%= _shopkeeper.try :city %></td>
  <td><%= time_tag _shopkeeper.try :created_at if _shopkeeper %></td>
  <td><%= _shopkeeper.try :user_grade_i18n %></td>
  <td><%= record.ecn_count %></td>
  <td><%= number_to_percentage record.ancestry_rate * 100, precision: 1 if record.ancestry_rate.present? %></td>
  <td><%= record.ecn_grade_platinum_count %></td>
  <td><%= record.ecn_grade_gold_count %></td>
  <td><%= record.children_count %></td>
  <td><%= record.children_grade_platinum_count %></td>
  <td><%= record.children_grade_gold_count %></td>
  <td><%= record.indirectly_descendant_count %></td>
  <td><%= record.indirectly_descendant_grade_platinum_count %></td>
  <td><%= record.indirectly_descendant_grade_gold_count %></td>
</tr>